<%- include("./partials/header") %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="titleId">Title</label>
        <input class="form-control" id="titleId" type="text" name="contentTitle" autocomplete="off" required/><br />
    </div>
    <div class="mb-3">
        <label for="textareaId">Post</label>
        <textarea class="form-control" name="contentBody" id="textareaId"></textarea><br />
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
